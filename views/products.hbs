                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
            
        <div class="order-actions">
            <button type="submit">Add to Cart</button>
            </form>
            {{!-- <button onclick="addToCart('{{this._id}}')" id="addtocart">Add to Cart</button> --}}
            
        </div>
    </div>

     </li>
    {{/each}}
    </ul>


