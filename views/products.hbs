    </div>
    <div id="notification-container"></div>
    <ul>
        {{#each merinowool}}
        <li>

       <img src="{{this.imageUrl}}" alt="" class="disImage">
    <div class="order-container" style="">
        <div class="order-details">
           <a href="/product/{{this._id}}"> <img class="product-image" src="{{this.imageUrl}}" alt="Product Image"></a>
            <div class="product-info">
                <span class="product-name"> {{this.name}} </span>
                <div class="rating">★★★★☆</div>
            </div>
        </div>
        
        <p class="price">Price: {{this.price}}</p>
        <p class="price">Wooltype: {{this.woolType}}</p>
        <form action="/cart/{{this._id}}" method="post" onsubmit="addToCart('{{this._id}}')">
            <label for="quantity">quantity: </label>
            <select name="quantity" id="quantity" class="quantity-input">
